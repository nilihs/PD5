<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewReceiptDetailsActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="20dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="Title of Receipt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_shape"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Title of Receipt"
                    android:inputType="textMultiLine"
                    android:paddingLeft="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="Description of Receipt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_shape"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Description of Receipt"
                    android:inputType="textMultiLine"
                    android:paddingLeft="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="Total Cost"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/etCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_shape"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Total Cost of Receipt"
                    android:inputType="textMultiLine"
                    android:paddingLeft="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <Button
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Receipt"
                    android:layout_gravity="center"
                    android:background="@drawable/button_shape"
                    android:id="@+id/btnUpdate" />

                <Button
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Delete Receipt"
                    android:background="@drawable/delete_button_shape"
                    android:id="@+id/btnDelete" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>